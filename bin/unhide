#!/usr/bin/env bash
# A quick script to mass move .* to * (e.g .rdata to rdata)

if [[ -d $1 ]]; then
  for file in $(ls .*); do
    #echo ${file:0:1}
    if [[ ${file:0:1} == "." ]]; then
      #echo $file
      mv $file ${file:1}
    fi
  done

else
  echo "a quick script to move .* to * (e.g .rdata to rdata)"
  echo "$0 <dir>"
fi


